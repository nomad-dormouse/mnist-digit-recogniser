# =====================================================================
# DATABASE CONFIGURATION FOR PRODUCTION ENVIRONMENT
# These variables are used by both the PostgreSQL Docker container
# and the Python application for database connections
# =====================================================================

# Database credentials
DB_USER=postgres          # Used as POSTGRES_USER in Docker container
DB_PASSWORD=postgres      # Used as POSTGRES_PASSWORD in Docker container
DB_NAME=mnist_db          # Used as POSTGRES_DB in Docker container

# Connection settings 
DB_HOST=db                # Use 'db' as hostname (Docker service name)
DB_PORT=5432              # Standard PostgreSQL port

# Docker variables (will be set from the above)
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=${DB_NAME}

# =====================================================================
# STREAMLIT CONFIGURATION
# =====================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_ENABLE_CORS=false 