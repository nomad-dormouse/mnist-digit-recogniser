# =====================================================================
# LOCAL DEVELOPMENT CONFIGURATION
# These variables are used by both Docker containers and local development
# =====================================================================

# Database configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=mnist_db
DB_USER=postgres
DB_PASSWORD=postgres

# Docker container names
WEB_CONTAINER_NAME=mnist-digit-recognizer-web-1
DB_CONTAINER_NAME=mnist-digit-recognizer-db-1

# Volume and network names
DB_VOLUME_NAME=mnist-postgres-data
NETWORK_NAME=mnist-network

# Application settings
APP_PORT=8501
MODEL_PATH=/app/model/saved_models/mnist_model.pth

# Docker settings
POSTGRES_USER=${DB_USER}
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=${DB_NAME}
POSTGRES_INITDB_ARGS=--data-checksums
PGDATA=/var/lib/postgresql/data/pgdata 